@model demo.Models.Review

@using (Html.BeginForm("index", "Review", FormMethod.Post))
{
    //@Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="form-control err">
        <div class="form-group">
            @Html.TextBoxFor(m => m.Rating, "", new { @class = "modal-form-input", @placeholder = "Name", @type = "number" })
            @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "badge badge-danger" })
            <small></small>
        </div>
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Comment, new { @class = "modal-form-input", @placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "badge badge-danger" })
        <small></small>
    </div>
    <div class="form-group">
        <input type="submit" name="submit" class="btn btn-danger button-login button-hover" value="Register" />
    </div>
}

